<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<style>
    #chat{
        min-width: 200px;
        max-width: 200px;
        min-height: 250px;
        max-height: 250px;
        background-color: aliceblue;
        color: black;
        overflow-y: scroll;
    }
</style>
<body>
    <div class="container">        
        <div class="card">
            <div class="card-header mt-2"><h3>Chat John</h3></div>
            <hr>
            <div class="card-body">
                <div id="chat"></div>
                <input type="text" name="" id="msg" class="form-control mb-2" placeholder="escreva sua mensagem">
                <input type="text" name="" id="username" class="form-control mb-2" placeholder="Seu nome de usuÃ¡rio">
                <button class="btn btn-success" onclick="enviar()">Enviar</button>
            </div>
        </div>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");
    socket.on("disconnect", ()=>{
        console.log('desconectado');
    })
    socket.on("showmsg", (data)=>{
        console.log(data);
        var chat = document.getElementById("chat");
        var p = document.createElement("p");
        p.innerHTML = data.username + ": " + data.msg;
        chat.append(p)
    })
    function enviar(){
        var msgField = document.getElementById("msg");
        var usernamefield = document.getElementById("username");

        var msg = msgField.value;
        var username = usernamefield.value;

        socket.emit("msg", {msg: msg, username:username})
    }


</script>
</html>